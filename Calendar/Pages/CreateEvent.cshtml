@page
@model Calendar.Pages.CreateEventModel
@{
    ViewData["Title"] = "CreateEvent";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles
{
    <link rel="stylesheet" 
          href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" />
}

<div class="row">
    <div class="col">
        <h1>Create Event</h1>
    </div>
</div>
<form>
    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary" id="submit">Save</button>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    Information
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="row">
                                <div class="form-group col">
                                    <label for="event_start">Start date</label>
                                    <input id="event_start" type="text" class="form-control datepicker">
                                </div>
                            </div>
                            <div class="row">
                                <label for="event_time_hrs" class="col-8">Start time</label>
                            </div>
                            <div class="row">
                                <div class="form-inline col">
                                    <div class="row">
                                        <div class="input-group mb-3 col-6">
                                            <input id="event_time_hrs" type="text" class="form-control"
                                                   aria-label="time hours" aria-describedby="hours_addon" />
                                            <div class="input-group-append">
                                                <span class="input-group-text" id="hours_addon">Hrs</span>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3 col-6">
                                            <input id="event_time_hrs" type="text" class="form-control"
                                                   aria-label="time hours" aria-describedby="hours_addon" />
                                            <div class="input-group-append">
                                                <span class="input-group-text" id="hours_addon">Min</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value=""
                                               id="show_end_date_panel" />
                                        <label for="show_end_date_panel">Enter end date of event</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="event_end_panel" class="col-md-6 col-sm-12 d-none">
                            <div class="row">
                                <div class="form-group col">
                                    <label for="event_start">End date</label>
                                    <input id="event_start" type="text" class="form-control datepicker">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script src="~/js/create-event.js"></script>
}