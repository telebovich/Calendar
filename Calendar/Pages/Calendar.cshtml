@page

@model Calendar.Pages.CalendarModel
@{
    ViewData["Title"] = "Calendar";
}

<div class="row">
    <div class="col-8">
        <a class="text-dark" href="/SelectMonth/@Model.Year">
            <h2>@Model.MonthName @Model.Year</h2>
        </a>
    </div>
    <div class="col-4">
        <div class="float-right">
            <a class="btn btn-light" asp-area="" asp-page="/Calendar" asp-all-route-data="Model.UpLinkParameters">
                <i class="fas fa-angle-up"></i>
            </a>
            <a class="btn btn-light" asp-area="" asp-page="/Calendar" asp-all-route-data="Model.DownLinkParameters">
                <i class="fas fa-angle-down"></i>
            </a>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Sun</th>
            <th>Mon</th>
            <th>Tue</th>
            <th>Wed</th>
            <th>Thu</th>
            <th>Fri</th>
            <th>Sat</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < 6; i++)
        {
            <tr>
                @for (int j = 0; j < 7; j++)
                {
                    <td>
                        @if (Model.MonthArray[i, j] > 0)
                        {
                            await Html.RenderPartialAsync("DayPartial", Model.MonthArray[i, j]);
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-8">
        <h2>Events</h2>
    </div>
    <div class="col-4">
        <div class="float-right">
            <a class="btn btn-light" asp-area="" asp-page="/Calendar">
                <i class="fas fa-plus"></i>
            </a>
        </div>
    </div>
</div>
<hr />

